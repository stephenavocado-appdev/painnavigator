  <div class="col">
  </div>

  <div class="col-md-4">
    <div class="progress" style="height: 10px;">
      <div class="progress-bar" role="progressbar" style="background-color: #61C7ED; width: <%= @q.id * 100 / 23 %>%;" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
  </div>

  <div class="col">
  </div>

</div>

<div class="row mt-4">

  <div class="col">
  </div>

  <div class="col-md-4 text-center">
    <h1>User Profile</h1>
  </div>

  <div class="col">
  </div>
</div>

<div class="row mt-5">

  <div class="col">
  </div>

  <div class="col-md-4 text-center">
    <h4>
      <%= @q.question %>
    </h4>
  </div>

  <div class="col">
  </div>
</div>

<% if @q.input_type == "Input" %>
<div class="row mt-4">

  <div class="col">
  </div>

  
  <div class="col-md-4 text-center d-grid">
  <form action="/new_user/2">
    <input type="text" class="form-control" id="<%= @q.id %>_box" name="query_q_<%= @q.id %>">
  </div>

  <div class="col">
  </div>
</div>
<% end %>


<% @q.answer_options.split(",").each do |a_option| %>
<div class="row mt-4">

  <div class="col">
  </div>

  <div class="col-md-4 text-center d-grid">
    
    <%# if @list_of_questions.at(@q_id.to_i - 1).input_type == "Select" %>
    <input type="checkbox" class="btn-check" id="<%= a_option %>" autocomplete="off">
    <label class="btn btn-outline-primary btn-lg" for="<%= a_option %>"><%= a_option %></label>
    <%# end %> 

  </div>

  <div class="col">
  </div>
</div>
<% end %>

<div class="row mt-4 mb-4">
  <div class="col">
  </div>

  <div class="col-md-4 text-center d-grid">
    <% if @q.input_type == "Select_Multi" || @q.input_type == "Input"%>
      <button class="btn btn-primary homebtn">Next</button>
    <% end %>
    </form>
  </div>

  <div class="col">
  </div>
</div>
