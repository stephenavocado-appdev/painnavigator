<div class="row mt-1">
<h2>Welcome back, <%= @current_user.first_name %>!</h2>
</div>

<div class="row mt-2">
<h6>Login Streak</h6>
</div>

<div class="row mt-2">
  <div class="col">
    <h5>Up Next</h5>
  </div>
  <div class="col text-end">
    <a class="dashbtn-lesson">More Lessons <i class="fas fa-angle-right"></i></a>
  </div>
</div>

<% @current_user.lessons.each do |a_lesson| %>
<div class="row mt-2 homebtncol">
  <div class="card lessoncard">
    <div class="card-body">
      <h6><%=a_lesson.name%></h6>
      <a><i class="far fa-clock"></i> <%=a_lesson.video.seconds.to_i / 60%> minutes</a>
      <a>Play Lesson <i class="far fa-play-circle"></i></a>
    </div>
  </div>
</div>
<% end %>

<div class="row mt-4">
  <div class="col">
    <h5>Today's Goals</h5>
  </div>
  <div class="col text-end">
    <a class="dashbtn-goal">More Goals <i class="fas fa-angle-right"></i></a>
  </div>
</div>

<div class="row mt-3">
  <div class="col text-center">
    <div class="row mt-2 homebtncol">
      <div class="card addcard">
        <div class="card-body">
          <a href="/creategoal"><h6 class="mt-2"><i class="fas fa-trophy fa-3x"></i></h6></a>
          <a>New Goal</a>
        </div>
      </div>
    </div>
  </div>
  <div class="col text-center">
     <div class="row mt-2 homebtncol">
      <div class="card addcard">
        <div class="card-body">
          <h6 class="mt-2"><i class="fas fa-book-medical fa-3x"></i></h6>
          <a>Pain Diary</a>
        </div>
      </div>
  </div>
</div>
