<% @current_user.lessons.each do |a_lesson| %>
<div class="row mt-2 homebtncol">
  <div class="card lessoncard">
    <div class="card-body">
      <a href="/lessons/<%=a_lesson.id%>" style="text-decoration: none"><h6><%=a_lesson.name%> <i class="far fa-play-circle"></i></h6></a>
      <a><i class="far fa-clock"></i> <%=a_lesson.video.seconds.to_i / 60%> minutes</a>
    </div>
  </div>
</div>

<% end %>

<div class="row mt-4 homebtncol">
  <div class="col">
    <h5>Today's Goals</h5>
  </div>
