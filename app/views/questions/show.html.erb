<div>
  <div>
    <h1>
      Question #<%= @the_question.id %> details
    </h1>

    <div>
      <div>
        <a href="/questions">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_question/<%= @the_question.id %>">
          Delete question
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Question
      </dt>
      <dd>
        <%= @the_question.question %>
      </dd>

      <dt>
        Input type
      </dt>
      <dd>
        <%= @the_question.input_type %>
      </dd>

      <dt>
        Answer options
      </dt>
      <dd>
        <%= @the_question.answer_options %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_question.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_question.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit question
    </h2>

    <form action="/modify_question/<%= @the_question.id %>"  method="post" >
      <div>
        <label for="question_box">
          Question
        </label>

        <input type="text" id="question_box" name="query_question" value="<%= @the_question.question %>">
      </div>

      <div>
        <label for="input_type_box">
          Input type
        </label>

        <input type="text" id="input_type_box" name="query_input_type" value="<%= @the_question.input_type %>">
      </div>

      <div>
        <label for="answer_options_box">
          Answer options
        </label>

        <input type="text" id="answer_options_box" name="query_answer_options" value="<%= @the_question.answer_options %>">
      </div>

      <button>
        Update question
      </button>
    </form>
  </div>
</div>

<hr>
