<div class="offcanvas offcanvas-bottom background" tabindex="-1" id="painscore" aria-labelledby="painscoreLabel">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="painscoreLabel">Pain Score</h5>
    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body small">

  <div class="row text-center">
    
      <a class="rangetext">My pain is a <output></output> out of 10</a>
  
  </div>
  

  <form action="/insert_pain_diary" method="post">

    <div class="row homebtncol mt-5">
      <input type="range" class="form-range painscorerange" style="color: white" id="customRange1" name="query_pain_score" min="0" max="10">
    </div>

    <div class="row mt-4 homebtncol mt-5">
      <div class="d-grid gap-2">
        <button class="btn homebtn">Log Pain Score</button>
      </div>
    </div>

    </form>
  
  </div>
</div>

<script>

  let i = document.querySelector('input'),
      o = document.querySelector('output');
      o.innerHTML = i.value;

  i.addEventListener('input', function () {
    o.innerHTML = i.value;
  }, false);

</script>
