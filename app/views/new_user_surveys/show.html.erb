<div class="row">
<div class="row mt-4">
  <div class="col text-center">
    <img src="/PN_transparent.png" class="img-fluid" width="200" height="24">
  </div>
</div>
</div>

<div class="row mt-3">

  <div class="col">
  </div>

  <div class="col-md-4 mt-2">
    <div class="progress" style="height: 10px;">
      <div class="progress-bar" role="progressbar" style="background-color: #61C7ED; width: <%= @q.id * 100 / 23 %>%;" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
  </div>

  <div class="col">
  </div>

</div>

<div class="row mt-4">

  <div class="col">
  </div>

  <div class="col-md-4 text-center">
    <h1>Profile</h1>
  </div>

  <div class="col">
  </div>
</div>

<div class="row mt-3">

  <div class="col">
  </div>

  <div class="col-md-4 text-center">
    <h5>
      <%= @q.question %>
    </h5>
  </div>

  <div class="col">
  </div>
</div>

<% if @q.input_type == "Date" %>
<div class="row mt-4">

  <div class="col">
  </div>

  
  <div class="col-md-4 text-center d-grid needs-validation" novalidate>
  <form action="/new_user/<%=@q.id.to_i+1%>">
    <input type="text" class="form-control textinput" id="<%= @q.id %>_box" name="query_q_<%= @q.id %>" required>
     <div class="valid-feedback">
      Looks good!
    </div>
  </div>

  <div class="col">
  </div>
</div>


<% else %>

<% @q.answer_options.split(",").each do |a_option| %>

<form action="/new_user/<%=@q.id+1%>">

<div class="row mt-4">

  <div class="col">
  </div>

  <div class="col-md-4 text-center d-grid">
      <input type="hidden" value="<%= a_option %>" name="query_q_<%=@q.id%>">
      <button class="btn btn-outline btn-lg homebtn" type="submit"><%= a_option %></button>
  </div>

  <div class="col">
  </div>
</div>
</form> 
<% end %>
<% end %>

<div class="row mt-4 mb-4">
  <div class="col">
  </div>

  <div class="col-md-4 text-center d-grid">
    <% if @q.input_type == "Input"%>
      <button class="btn btn-primary homebtn">Next</button>
    <% end %>
    </form>
  </div>

  <div class="col">
  </div>
</div>
