        <a href="/creategoal">
          <button class="btn addcard" style="height: 100%; width: 100%; background-color: white;" data-bs-toggle="offcanvas" data-bs-target="#offcanvasBottom" aria-controls="offcanvasBottom">
            <h6 class="mt-2"><i class="fas fa-trophy fa-3x"></i></h6>
            <a>New Goal</a>
          </button>
        </a>

      </div>
    </div>

    <div class="col-6 text-center">
      <div class="row mt-2 homebtncol">
       
        <a href="/creategoal">
          <button class="btn addcard" style="height: 100%; width: 100%; background-color: white;">
            <h6 class="mt-2"><i class="fas fa-book-medical fa-3x"></i></h6>
            <a>Pain Score</a>
          </button>
        </a>

      </div>
    </div>

  </div>

